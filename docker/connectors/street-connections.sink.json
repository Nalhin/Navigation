      },
      {
        "oldName": "fromLongitude",
        "newName": "from.longitude"
      },
      {
        "oldName": "fromId",
        "newName": "from.id"
      },
      {
        "oldName": "toLatitude",
        "newName": "to.latitude"
      },
      {
        "oldName": "toLongitude",
        "newName": "to.longitude"
      }
    ]
  }
}
